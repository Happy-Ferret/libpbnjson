{
   "id"   : "Contact",
   "type" : "object",
   "properties" : {
      "displayName"  : {"type"        : "string",
                        "description" : "The name of this Contact, suitable for display to end-users."},
      "name"         : {"$ref":"ContactName",
                        "description" : "The broken-out components and fully formatted version of the contact's real name."},
      "nickname"     : {"type"        : "string",
                        "optional"    : true,
                        "description" : "The casual way to address this Contact in real life."},
      "birthday"     : {"type"        : "string",
                        "format"      : "date",
                        "description" : "The birthday of this contact."},
      "anniversary"  : {"type"        : "string",
                        "format"      : "date",
                        "description" : "The wedding anniversary of this contact."},
      "gender"       : {"type"        : "string",
                        "enum"        : ["male","female","undisclosed"],
                        "description" : "The gender of this contact."},
      "note"         : {"type"        : "string",
                        "optional"    : true,
                        "description" : "Notes about this contact."},
      "emails"       : {"type"        : "array",
                        "items"       : {"$ref":"ContactPluralField"},
                        "optional"    : true,
                        "description" : "E-mail addresses for this Contact."},
      "urls"         : {"type"        : "array",
                        "items"       : {"$ref":"ContactPluralField"},
                        "optional"    : true,
                        "description" : "URLS of web pages for this Contact."},
      "phoneNumbers" : {"type"        : "array",
                        "items"       : {"$ref":"ContactPluralField"},
                        "optional"    : true,
                        "description" : "Phone numbers for this Contact. In addition to the standard Canonical Values for type, this field also defines: mobile, fax, and pager."},
      "ims"          : {"type"        : "array",
                        "items"       : {"$ref":"ContactPluralField"},
                        "optional"    : true,
                        "description" : "Instant messaging address for this Contact. Instead of the standard Canonical Values for type, this field defines: aim, gtalk, icq, xmpp, msn, skype, qq, and yahoo."},
      "photos"       : {"type"        : "array",
                        "items"       : {"$ref":"ContactPluralField"},
                        "optional"    : true,
                        "description" : "URLS of photos for this Contact."},
      "addresses"    : {"type"        : "array",
                        "items"       : {"$ref":"ContactPluralAddress"},
                        "optional"    : true,
                        "description" : "Physical mailing addresses for this Contact."},
      "organizations": {"type"        : "array",
                        "items"       : {"$ref":"ContactOrganization"},
                        "optional"    : true,
                        "description" : "A current or past organizational affiliation of this Contact."},
      "accounts"     : {"type"        : "array",
                        "items"       : {"$ref":"ContactAccount"},
                        "optional"    : true,
                        "description" : "An online account held by this Contact."},
      "tags"         : {"type"        : "array",
                        "items"       : { "type" : "string" },
                        "optional"    : true,
                        "description" : "User-defined categories or labels for this contact."}
   }
}

